<main class="main detail clearfix">

    <div class="image_wrapper">
        <img src="{{ getImage }}" class="app_image" alt="app_image">
    </div>

    <div class="app_name">{{ getName }}</div>
    {{# getSmallDesc }}
        <div class="app_desc">{{ . }}</div>
    {{/ getSmallDesc }}

    <div class="center_wrapper">
        {{# getModifications }}
            {{> app-mod-partial }}
        {{/ getModifications }}
    </div>

    {{# hasHidden }}
        <div class="center_wrapper">
            <a href="#" class="btn_download small sub">Показать все</a>
        </div>
    {{/hasHidden}}
</main>